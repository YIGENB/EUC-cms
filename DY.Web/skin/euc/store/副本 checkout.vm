#if (!$isajax)
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <title>购物车 - $config.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="Keywords" content="$config.Keywords" />
    <meta name="Description" content="$config.Desc" />
    <link href="/include/css/store.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/include/js/jquery/jquery-1.3.2.min.js"></script>
    <script type="text/javascript" src="/include/js/utils.js"></script>
    <script type="text/javascript" src="/include/js/common.js"></script>
    <script type="text/javascript" src="/include/js/store.js"></script>
    <script type="text/javascript" src="/include/js/region.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $(':input[type="text"],textarea').css({'border': '1px #7f9db9 solid','padding':'2px'});
            $(':input[type="text"],textarea').focus(function() {
                $(this).css({ 'border': '1px #ff6600 solid' });
            }).blur(function() {
                $(this).css({ 'border': '1px #7f9db9 solid' });
            });
        });
    </script>
</head>
 

<body>
    <div id="page">
        <div id="content">
            <div id="crumbs">
                <strong>您的位置：</strong>
                <ol class="crumbs">
                    <li><a href="/">首页</a> </li>
                    <li><a href="/cart.aspx">我的购物车</a></li>
                    <li class="current">填写购物信息</li>
                </ol>
                <span class="cart-tip">购物车帮您一次性完成批量购买与付款，下单更便捷，付款更简单！</span>
            </div>
            <!-- Content Start -->
            <div class="flow-steps">
                <ol class="num5">
                    <li><span class="first">挑选商品</span></li>
                    <li class="current-prev"><span>查看购物车</span></li>
                    <li class="current"><span>填写购物信息</span></li>
                    <li><span>支付货款</span></li>
                    <li class="last"><span>完成订购</span></li>
                </ol>
            </div>
            <div id="cart">
                <table width="100%">
                <thead>
                    <tr>
                        <th>商品</th>
                        <th>名称</th>
                        <th>规格</th>
                        <th>赠送积分</th>
                        <th>单价</th>
                        <th>数量</th>
                        <th>小计</th>
                    </tr>
                </thead>
                <tbody>
                    #set($goods_integral = 0)
                    #set($goods_number = 0)
                    #foreach($row in $cartlist)
                    <tr>
                        <td align="center">#if($row.goods_img != "")<img src="$row.goods_img" width="48" />#end</td>
                        <td><a href="/goods-${row.goods_id}.aspx">$row.goods_name</a></td>
                        <td align="center">$row.goods_attr</td>
                        <td align="right">$row.give_integral分</td>
                        <td align="right">￥$row.goods_price</td>
                        <td align="right">$row.goods_number</td>
                        <td align="right">#set($xj = ${row.goods_price} * ${row.goods_number}) ￥$xj</td>
                    </tr>
                    #set($goods_integral = $row.give_integral + $goods_integral)
                    #set($goods_number = $row.goods_number + $goods_number)
                    #end
                </tbody>
                </table>
                <div class="cart-info">
                    <p>商品数量总计：$goods_number件 &nbsp; 赠送积分总计：$goods_integral分 &nbsp; #if ($discount > 0)优惠：￥$discount &nbsp; #end产品金额总计(不含运费)：#if($discount > 0)$goods_amount - $discount = #set($goods_amount = $goods_amount - $discount)#end<span class="price">￥$goods_amount</span></p>
                </div>
            </div>
            <form method="post" action="?act=creat_order" onsubmit="return store.checkOrderForm(this)">
            <div id="consignee">
                <table width="100%">
                <tr>
                    <th colspan="4">收货人信息</th>
                </tr>
                <tr>
                    <td class="label"><label class="red">*</label> 配送区域：</td>
                    <td>
                          <select name="province" id="selCities_0" onchange="region.changed(this, 2, 'selDistricts_0')">
                            <option value="0">请选择省</option>
                            #foreach($row in $SystemConfig.GetRegion(1,434))
                            <option value="$!{row.region_id}">$!{row.region_name}</option>
                            #end
                        </select>
                        <select name="city" id="selDistricts_0" onchange="region.changed(this, 3, 'selDistrict_0')">
                            <option value="0">请选择市</option>
                        </select>
                        <select name="district" id="selDistrict_0" style=" display:none;">
                            <option value="0">请选择区县</option>
                        </select>
                    </td>
                    <td class="label"><label class="red">*</label> 收货人姓名：</td>
                    <td><input name="consignee" type="text" value="" /></td>
                 </tr>
                 <tr>
                    <td class="label"><label class="red">*</label> 收货地址：</td>
                    <td><input name="address" type="text" value="" size="50" /></td>
                    <td class="label"><label class="red">*</label> 邮编：</td>
                    <td><input name="zipcode" type="text" value="" maxlength="6" size="6" /></td>
                 </tr>
                 <tr>
                    <td class="label">电话：</td>
                    <td><input name="tel" id="tel1" type="text" size="2" maxlength="4" /> - <input name="tel" id="tel2" type="text" size="8" /> - <input name="tel" id="tel3" type="text" size="2" /></td>
                    <td class="label">电子邮件：</td>
                    <td><input name="email" type="text" value="" size="30" /></td>
                 </tr>
                 <tr>
                    <td class="label"><label class="red">*</label> 手机：</td>
                    <td><input name="mobile" type="text" value="" /> 电话和手机必须填写一项</td>
                    <td class="label">最佳收货时间：</td>
                    <td><input name="best_time" type="text" value="" /> 如：下午三点左右</td>
                 </tr>
                </table>
                <br /><br />
                <table width="100%">
                   <tr>
                    <th colspan="3">请选择支付方式 <label class="red">*</label></th>
                  </tr>
                  #foreach($row in $payment_list)
                  <tr>
                    <td width="20"><input type="radio" name="payment" value="${row.pay_id}" /></td>
                    <td>${row.pay_name}</td>
                    <td width="80%">${row.pay_desc}</td>
                  </tr>
                  #end
                </table>
                <br /><br />
                <table width="100%">
                  <tr>
                    <th colspan="5">请选择配送方式 <label class="red">*</label></th>
                  </tr>
                  #foreach($row in $shipping_list)
                  <tr>
                    <td width="20"><input type="radio" name="shipping" value="${row.delivery_id}" onclick="store.ChangeDeliveryType(${row.delivery_id})" /></td>
                    <td>${row.delivery_name}#if(!$show_delivery_fee)<i>[+￥${row.delivery_price}元]</i>#end</td>
                    <td>${row.delivery_desc}</td>
                  </tr>
                  #end
                </table>
                <br /><br />
                <table width="100%">
                   <tr>
                    <th>订单备注</th>
                  </tr>
                  <tr>
                    <td><textarea name="postscript" cols="80" rows="6" style="width:100%;"></textarea> <br />请填写您的产品订购要求，我们会根据您的要求进行发货。 </td>
                  </tr>
                </table>
                <br /><br />
                <table width="100%">
                   <tr>
                    <th colspan="2">使用优惠券</th>
                  </tr>
                  <tr>
                    <td class="label">优惠券号码：</td>
                    <td><input type="text" name="bonus_sn" id="bonus_sn" /> <input type="button" value="验证" onclick="store.ValidataBonus()" style=" border:1px #7f9db9 solid; padding:0px 5px; font-size:12px; background:#fff;" /> <span id="bonus-tip">请输入您的优惠券号码，每个订单只能使用一张优惠券</span></td>
                  </tr>
                </table>
                <br /><br />
                <table width="100%">
                   <tr>
                    <th>费用总计</th>
                  </tr>
                  <tbody id="order-price">
#end
                  <tr>
                    <td align="right">商品总价：￥#if($discount > 0 && $isajax)#set($goods_amount = $goods_amount - $discount)#end$goods_amount
                   + 配送费用：￥$delivery_fee - 优惠券：￥$bonus<br />
                   = 订单总金额：<span class="price">￥#set($order_amount=$goods_amount + $delivery_fee - $bonus) $order_amount</span>
                   <input type="hidden" name="delivery_fee" id="delivery_fee" value="$delivery_fee" />
                   <input type="hidden" name="bonus" id="bonus" value="$bonus" /></td>
                  </tr>
#if (!$isajax)
                  </tbody>
                </table>
            </div>
            <center>
                <p><input type="image" src="/include/images/btn-003.jpg" /></p>
            </center>
            </form>
        </div>
    </div>
</body>
</html>
#end